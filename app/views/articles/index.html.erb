<h1>Article</h1>
<%= link_to "Create new articles path", new_article_path  %>


<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @article.each do |a| %>
    <tr>
      <td><%= a.id %></td>
      <td><%= a.title %></td>
      <td><%= a.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>

